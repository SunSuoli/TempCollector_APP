
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout1"
    android:minWidth="25px"
    android:minHeight="25px">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:id="@+id/relativeLayout2">
        <TextView
            android:text="V_min"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
            android:id="@+id/label1" />
        <android.support.design.widget.TextInputEditText
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/label1"
            android:layout_marginLeft="60dp"
            android:layout_alignBottom="@id/label1"
            android:layout_marginBottom="-10dp"
            android:id="@+id/V_min"
            />
        <TextView
            android:text="T_min"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/label1"
            android:layout_marginTop="80dp"
            android:id="@+id/label2" />
        <android.support.design.widget.TextInputEditText
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/label2"
            android:layout_marginLeft="60dp"
            android:layout_alignTop="@+id/V_min"
            android:layout_marginTop="80dp"
            android:id="@+id/T_min"
            />
        <TextView
            android:text="V_max"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/label2"
            android:layout_marginTop="80dp"
            android:id="@+id/label3" />
        <android.support.design.widget.TextInputEditText
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/label3"
            android:layout_marginLeft="60dp"
            android:layout_alignTop="@+id/T_min"
            android:layout_marginTop="80dp"
            android:id="@+id/V_max"
            />
        <TextView
            android:text="T_max"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/label3"
            android:layout_marginTop="80dp"
            android:id="@+id/label4" />
        <android.support.design.widget.TextInputEditText
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/label4"
            android:layout_marginLeft="60dp"
            android:layout_alignTop="@+id/V_max"
            android:layout_marginTop="80dp"
            android:id="@+id/T_max"
            />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:id="@+id/relativeLayout3" >
        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:id="@+id/Ok" />
        <Button
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:id="@+id/Cancel" />
    </RelativeLayout>

</RelativeLayout >