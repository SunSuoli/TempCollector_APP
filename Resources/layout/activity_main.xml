
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relativeLayout1">
        <TextView
            android:text="36.5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/Receive"
            android:textSize="50dp"
            android:textColor="#ffffffff" />
        <TextView
            android:text="o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Receive"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/Receive"
            android:layout_marginBottom="25dp"
            android:id="@+id/label"
            android:textSize="20dp"
            android:textColor="#ffffffff" />
        <TextView
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label"
            android:layout_alignBottom="@+id/Receive"
            android:layout_marginBottom="6dp"
            android:id="@+id/labe2"
            android:textSize="30dp"
            android:textColor="#ffffffff" />
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Receive"
            android:textColor="#ffffffff"
            android:id="@+id/msg" />
    </RelativeLayout >
    <OxyPlot.Xamarin.Android.PlotView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_above="@+id/Start_Stop"
        android:layout_marginBottom="10dp"
        android:id="@+id/Chart_View"
     />

    <ToggleButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:button="@drawable/Button_Round"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:id="@+id/Start_Stop"
        android:background="#00000000" 
         />
    <ToggleButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:button="@drawable/connect"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:id="@+id/connect"
        android:background="#00000000"
        android:enabled="false" 
         />

</RelativeLayout>